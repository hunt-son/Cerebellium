<div class = "frontpage">
	<div class="header">
		<h1> Cerebellium </h1>
	</div>
	<div class="body">
		<h1>Make a memory</h1>
		<div class="form">
			<%= form_tag({controller: "getaway", action: "index"}, method: "post") do %>
				<%= label_tag(:start, "Starting Location") %>
				<%= text_field_tag(:start) %>
				<%= label_tag(:distance, "Max distance Traveled")%>
				<%= text_field_tag(:distance) %>
				<%= label_tag(:price, "How much you're willing to pay (1-3)") %>
				<%= text_field_tag(:price) %>
				<%= submit_tag("Make a memory") %>
			<% end %>
		</div>
	</div>

</div>
